.carousel-text
      position relative;
      height 500px;
      padding-top 43px;
      padding-bottom 30px;
      background url(../img/bg-pattern.jpg);
      .swiper-container
            width 100%;
            height 100%;
            .swiper-slide
                text-align center;
                font-size 20px;
                p
                  color #fff;
                  font-family Playfair Display,serif;
                  font-style italic;
                  line-height 39px;
                  font-size 27px;
                span
                    font-size 13px;
                    color white;
                    text-transform uppercase;
            .swiper-pagination 
                position absolute;
                top 95%;
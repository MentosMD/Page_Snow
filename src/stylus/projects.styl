.projects
    padding-bottom 80px;
    padding-top 80px;
    .block
        margin-bottom 50px;
        h1
            margin-bottom 30px;
            font-family Playfair Display,serif;
            font-weight 700;
            color #171717;
        p
            color #5f5f5f;
            font-size 14px;
    .content
        padding 0;
        position relative;
        cursor pointer;
        &:before 
            content "";
            width 100%;
            height 100%;
            position absolute;
            top 0;
            left 0;
            opacity 0;
            background rgba(0,0,0,0.8);
        &:hover:before
            opacity 1;
            transition opacity .6s ease;
        &:hover>.portfolio-info>h1
            opacity 1;
            transition transform .4s .2s,opacity .4s .2s;
            transform translateY(-10px);
        &:hover>.portfolio-info>p
            opacity 1;
            transition transform .4s .3s,opacity .4s .3s;  
            transform translateY(-10px);
        .portfolio-info
            width 100%
            height 100%;
            position absolute;
            top 0;
            left 0;
            padding 80px;
            h1
              font-size 24px;
              text-align center;
              color white;
              font-family Playfair Display,serif;
              opacity 0;
              font-weight 700;
              
            p    
              font-size 15px;
              opacity 0;
              text-align center;
              color white;
              font-family Work Sans,sans-serif;
              text-transform uppercase;
              opacity 0;
              